export interface Config {
  debug?: boolean;
  [key: string]: unknown;
}

const explorer = cosmiconfig('<%= nameKebab %>');

export async function loadConfig(): Promise<Config> {
  try {
    const result = await explorer.search();
    return result?.config ?? {};
  } catch {
    return {};
  }
}

# <%= namePascal %> Environment Variables

# Server
NODE_ENV=development
PORT=<%= port %>

<% if (needsDatabase && databaseType === 'postgres') { %>
# Database (PostgreSQL)
# Local development (with SSH tunnel)
DATABASE_URL="postgresql://supabase:securepass123@localhost:5433/<%= nameKebab %>"

# VPS Container Connection
# DATABASE_URL="postgresql://supabase:securepass123@perf_mgmt_postgres:5432/<%= nameKebab %>"
<% } else if (needsDatabase && databaseType === 'sqlite') { %>
# Database (SQLite)
DATABASE_URL="file:./dev.db"
<% } %>

<% if (needsAuth) { %>
# Authentication
AUTH_USERNAME=admin
AUTH_PASSWORD_HASH=$2b$10$REPLACE_WITH_REAL_HASH
JWT_SECRET=replace-with-secure-random-string
<% } %>
